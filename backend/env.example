# FORTIS Backend - Configurações de Ambiente
# Copie este arquivo para .env e configure as variáveis

# Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4

# Banco de Dados PostgreSQL
DATABASE_URL=postgresql://fortis:password@localhost:5432/fortis
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_CONNECT_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10
REDIS_TIMEOUT=5
REDIS_RETRY_ATTEMPTS=3

# Computação Transparente
TRANSPARENCY_LOG_PATH=./logs/transparent
TRANSPARENCY_MERKLE_DEPTH=20
TRANSPARENCY_VERIFICATION_NODES=node1.tse.gov.br,node2.tse.gov.br,node3.tse.gov.br
CONSENSUS_THRESHOLD_NODES=node1.tse.gov.br,node2.tse.gov.br,node3.tse.gov.br
CONSENSUS_THRESHOLD_REQUIRED=2
CONSENSUS_SIGNATURE_TIMEOUT=30

# Segurança
JWT_SECRET=fortis-super-secret-key-change-in-production-must-be-at-least-32-characters
JWT_ISSUER=fortis-voting
JWT_AUDIENCE=fortis-users
JWT_EXPIRATION=3600
ENCRYPTION_KEY=fortis-encryption-key-32-chars
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# TSE
TSE_BASE_URL=https://api.tse.jus.br
TSE_GOV_BR_BASE_URL=https://sso.acesso.gov.br
TSE_CLIENT_ID=your_client_id
TSE_CLIENT_SECRET=your_client_secret
TSE_REDIRECT_URI=http://localhost:8080/api/v1/tse/callback
TSE_API_KEY=your_tse_api_key
TSE_CERTIFICATE_PATH=/path/to/certificate.pem
TSE_TIMEOUT=30
TSE_SYNC_INTERVAL=3600

# Logging
RUST_LOG=info
